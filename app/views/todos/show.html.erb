<div>
  <%= link_to '一覧', todos_path %>
</div>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @todo.title %></td>
  </tr>
  <tr>
    <th>説明</th>
    <td><%= @todo.description %></td>
  </tr>
  <tr>
    <th>作成日</th>
    <td><%= @todo.created_at %></td>
  </tr>
  <tr>
    <th>更新日</th>
    <td><%= @todo.updated_at %></td>
  </tr>
  <tr>
    <td><%= link_to '編集', edit_todo_path(@todo.id) %></td>
  </tr>
  <tr>
    <td><%= button_to '削除', todo_path(@todo.id), method: :delete %></td>
  </tr>
</table>
